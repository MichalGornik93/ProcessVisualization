<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TankSimulation.Views.VisualizationPage"
             xmlns:vm="clr-namespace:TankSimulation.ViewModels" xmlns:local="clr-namespace:TankSimulation"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:VisualizationViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:ValueProgressBarConverter x:Key="ValueProgressBar" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout VerticalOptions="CenterAndExpand" Orientation="Vertical" Spacing="50">
        <Label Text="{Binding TankLevel}" TextColor="Black" HorizontalTextAlignment="Center"/>
        <ProgressBar  ProgressColor="Black" Margin="30,0" Progress="{Binding TankLevel, Converter={StaticResource ValueProgressBar}}"></ProgressBar>
    </StackLayout>
</ContentPage>
